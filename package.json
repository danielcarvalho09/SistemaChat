{
  "name": "sistema-chat-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "Tom/backend",
    "Tom/frontend"
  ],
  "scripts": {
    "install:backend": "cd Tom/backend && npm install",
    "install:frontend": "cd Tom/frontend && npm install",
