# ========================================
# CONFIGURAÇÃO DE PRODUÇÃO - HOSTINGER
# ========================================

# Database (PostgreSQL na Hostinger ou externo)
DATABASE_URL="postgresql://usuario:senha@host:5432/database?schema=public"

# Server
NODE_ENV=production
PORT=3000
API_VERSION=v1

# Security (IMPORTANTE: Gerar chaves fortes)
JWT_ACCESS_SECRET=sua_chave_super_secreta_aqui_minimo_32_caracteres
JWT_REFRESH_SECRET=sua_chave_refresh_super_secreta_minimo_32_caracteres
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# CORS (URL do seu frontend)
CORS_ORIGIN=https://seudominio.com,https://www.seudominio.com

# OpenAI (para assistente IA)
OPENAI_API_KEY=sua_chave_openai

# WhatsApp/Baileys (Otimizado para produção)
BAILEYS_SYNC_FULL_HISTORY=true
BAILEYS_KEEP_ALIVE_INTERVAL=20000
BAILEYS_PING_TIMEOUT=120000
BAILEYS_RECONNECT_MAX_ATTEMPTS=30

# Logs (Produção)
LOG_LEVEL=info

# Rate Limiting (Proteção contra ataques)
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=60000

# Upload de arquivos
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads
